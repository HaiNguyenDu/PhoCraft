<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" /> <!-- Bo tròn góc cho track -->
            <solid android:color="@color/custom_seekbar_track_color" />
            <size android:height="3dp" /> <!-- Chiều cao của track ĐÃ THAY ĐỔI -->
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="@android:color/transparent" />
                <size android:height="3dp" />
            </shape>
        </clip>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="@color/custom_seekbar_progress_color" />
                <size android:height="3dp" />
            </shape>
        </clip>
    </item>

</layer-list>