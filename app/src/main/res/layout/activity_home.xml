<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeActivity">

    <TextView
        android:id="@+id/tv_ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="You do not have permission"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_request"
        android:layout_width="@dimen/size_150"
        android:layout_height="@dimen/size_50"
        android:layout_marginTop="@dimen/size_20"
        app:cardCornerRadius="@dimen/size_20"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ps">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:text="Request Permission"
            android:textSize="@dimen/font_12" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="150dp"
        android:layout_height="@dimen/size_50"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginTop="@dimen/size_30"
        android:scaleType="centerCrop"
        android:src="@drawable/phocraft_logoa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_camera"
        android:layout_width="@dimen/size_26"
        android:layout_height="@dimen/size_26"
        android:layout_marginEnd="@dimen/size_10"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ic_logo" />

    <ImageView
        android:id="@+id/btn_setting"
        android:layout_width="@dimen/size_26"
        android:layout_height="@dimen/size_26"
        android:layout_marginEnd="@dimen/size_10"
        android:src="@drawable/ic_setting"
        app:layout_constraintEnd_toStartOf="@+id/btn_camera"
        app:layout_constraintTop_toTopOf="@+id/btn_camera" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_logo"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/black"
        app:tabMode="scrollable"
        app:tabTextColor="@color/black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:layout_marginTop="@dimen/size_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>