<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.editing.EditingActivity">

    <com.example.phocraft.views.PhotoEditorView
        android:id="@+id/image_editor_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:clipChildren="false"
        app:layout_constraintBottom_toTopOf="@+id/layout_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_40"
        android:src="@drawable/ic_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_save"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_30"
        android:layout_marginTop="@dimen/size_40"
        android:layout_marginEnd="@dimen/size_20"
        android:src="@drawable/ic_save"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_save_circle"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_marginTop="@dimen/size_40"
        android:layout_marginEnd="@dimen/size_20"
        android:src="@drawable/ic_save_circle"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_undo"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_marginEnd="@dimen/size_20"
        android:src="@drawable/ic_undo"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_redo"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <ImageView
        android:id="@+id/btn_redo"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_marginEnd="@dimen/size_20"
        android:src="@drawable/ic_redo"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_save_circle"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <LinearLayout
        android:id="@+id/layout_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/layout_btn">

        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:src="@drawable/ic_paint" />

        <SeekBar
            android:id="@+id/size_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="50"
            android:min="20"
            android:progress="35"
            android:progressDrawable="@drawable/edit_seekbar_track"
            android:splitTrack="false"
            android:thumb="@drawable/edit_thumb" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_10"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/layout_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_120"
        android:elevation="@dimen/size_10"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        app:layout_constraintBottom_toBottomOf="parent">

        <HorizontalScrollView
            android:id="@+id/layout_btn_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size_10"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/btn_crop"
                    android:layout_width="@dimen/size_55"
                    android:layout_height="@dimen/size_55"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_crop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_filter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btn_filter"
                    android:layout_width="@dimen/size_55"
                    android:layout_height="@dimen/size_55"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_filter_black" />

                <ImageView
                    android:id="@+id/btn_eju"
                    android:layout_width="@dimen/size_55"
                    android:layout_height="@dimen/size_55"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_eju" />

                <ImageView
                    android:id="@+id/btn_art"
                    android:layout_width="@dimen/size_55"
                    android:layout_height="@dimen/size_55"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_art" />

                <ImageView
                    android:id="@+id/btn_text"
                    android:layout_width="@dimen/size_55"
                    android:layout_height="@dimen/size_55"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_text" />
            </LinearLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/layout_btn_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="@dimen/size_90"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_font" />

                <ImageView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="@dimen/size_90"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_color" />

                <ImageView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="@dimen/size_90"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_stroke" />

                <ImageView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="@dimen/size_90"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_stroke_color" />

                <ImageView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="@dimen/size_90"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/ic_stroke_size" />
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/layout_btn_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/layout_btn_art_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                app:layout_constraintBottom_toBottomOf="parent">

                <FrameLayout
                    android:id="@+id/btn_eraser"
                    android:layout_width="@dimen/size_80"
                    android:layout_height="@dimen/size_90"
                    android:layout_marginHorizontal="@dimen/size_10"
                    app:cardCornerRadius="@dimen/size_10">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_marginBottom="@dimen/size_20"
                            android:src="@drawable/ic_eraser"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_10"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="@string/eraser"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_12"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_color_draw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:padding="@dimen/size_1">

                    <ImageView
                        android:layout_width="@dimen/size_80"
                        android:layout_height="@dimen/size_90"
                        android:src="@drawable/ic_color" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_paint_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:padding="@dimen/size_1">

                    <ImageView
                        android:layout_width="@dimen/size_80"
                        android:layout_height="@dimen/size_90"
                        android:src="@drawable/ic_paint_size" />
                </FrameLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_sticker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
