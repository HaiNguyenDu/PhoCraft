<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.camera.CameraActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.phocraft.views.FrameOverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/btn_camera"
        android:layout_width="@dimen/size_72"
        android:layout_height="@dimen/size_72"
        android:layout_marginBottom="@dimen/size_72"
        android:src="@drawable/ic_rounded_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/btn_swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_20"
        android:background="@drawable/bg_btn_camera"
        app:layout_constraintBottom_toBottomOf="@+id/btn_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_camera">

        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_margin="@dimen/size_10"
            android:src="@drawable/ic_swap" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_recent"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:layout_marginStart="@dimen/size_20"
        android:background="@drawable/bg_image_recent"
        android:scaleType="centerCrop"
        android:src="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_camera" />

    <HorizontalScrollView
        android:id="@+id/layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_50"
        android:layout_marginEnd="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_15"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linear_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:layout_marginHorizontal="@dimen/size_20"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <FrameLayout
                android:id="@+id/btn_light"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_marginEnd="@dimen/size_20"
                android:background="@drawable/bg_btn_camera">
                <ImageView
                    android:layout_width="@dimen/size_26"
                    android:layout_height="@dimen/size_28"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_plus_minus" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/btn_filter"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_marginEnd="@dimen/size_20"
                android:background="@drawable/bg_btn_camera">

                <ImageView
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_20"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_filter" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btn_size"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_marginEnd="@dimen/size_20"
                android:background="@drawable/bg_btn_camera">

                <ImageView
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_20"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_size" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btn_grid"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_marginEnd="@dimen/size_20"
                android:background="@drawable/bg_btn_camera">

                <ImageView
                    android:layout_width="@dimen/size_27"
                    android:layout_height="@dimen/size_28"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_grid" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btn_timer"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_marginEnd="@dimen/size_20"
                android:background="@drawable/bg_btn_camera">

                <ImageView
                    android:layout_width="@dimen/size_27"
                    android:layout_height="@dimen/size_27"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clock" />
            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/btn_arrow"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_28"
        android:layout_marginTop="@dimen/size_35"
        android:background="@drawable/bg_btn_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_btn_arrow"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_down" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>